{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RamaLama schema for inference engines",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "inference_engine"],
        "properties": {
          "name": { 
            "type": "string",
            "enum": ["serve", "serve --rag", "run", "run --rag", "perplexity", "bench", "rag", "convert", "quantize"]
          },
          "inference_engine": {
            "type": "object",
            "required": ["name", "options"],
            "anyOf": [
              {
                "required": ["native_cli"]
              },
              {
                 "required": ["container_cli"]
              }
            ],
            "properties": {
              "name": { "type": "string" },
              "native_cli": {
                "type": "object",
                "required": ["binary"],
                "properties": {
                  "binary": { "type": "string" },
                  "args": { "type": "array", "items": { "type": "string" } }
                }
              },
              "container_cli": {
                "type": "object",
                "properties": {
                  "entrypoint": { "type": "string" },
                  "args": { "type": "array", "items": { "type": "string" } }
                }
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "description"],
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "value": { "type": "string" },
                    "required": { "type": "boolean" },
                    "if": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "commands"],
  "additionalProperties": false
}
